{
  "name": "eyeshield",
  "private": true,
  "version": "0.0.0",
  "author": "zhaozunhong",
  "license": "MIT",
  "type": "module",
  "main": "./electron/app/app.mjs",
  "scripts": {
    "dev": "concurrently \"pnpm:run:*\"",
    "run:web": "vite",
    "run:build": "esbuild app/app.ts app/preload.ts --watch --bundle --splitting --external:electron --external:@prisma/client --external:electron-store --define:process.env.NODE_ENV=\\\"\"development\"\\\" --platform=node --loader:.png=dataurl --loader:.svg=text --format=esm --outdir=./electron/app --out-extension:.js=.mjs --tree-shaking=true",
    "run:app": "electron .",
    "build:app": "esbuild app/app.ts app/preload.ts --bundle --splitting --external:electron --external:@prisma/client --external:electron-store --define:process.env.NODE_ENV=\\\"production\\\" --platform=node --loader:.png=dataurl --loader:.svg=text --format=esm --outdir=./electron/app  --out-extension:.js=.mjs --tree-shaking=true",
    "build:web": "vite build",
    "build:all": "pnpm run build:app && pnpm run build:web",
    "package:win": "electron-builder --win --config",
    "package:mac": "electron-builder --mac --config",
    "package:linux": "electron-builder --linux --config",
    "db:push": "prisma db push",
    "db:std": "prisma studio",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@douyinfe/semi-ui": "^2.54.0",
    "@prisma/client": "5.10.2",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/themes": "^2.0.3",
    "class-variance-authority": "^0.7.0",
    "electron-store": "^8.2.0",
    "jotai": "^2.7.0",
    "prisma": "^5.10.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "std-env": "^3.7.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "4.0.0-alpha.7",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.14",
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.20.2",
    "radix-themes-tw": "^0.2.1",
    "tailwindcss": "4.0.0-alpha.7",
    "ts-node": "^10.9.2",
    "turbo": "^1.12.5",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vite": "^5.1.4",
    "vite-plugin-pages": "^0.32.0"
  }
}
